<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.SounDroid">
        <item name="android:popupMenuStyle">@style/popupMenuStyle</item>
        <item name="android:statusBarColor">?attr/statusBarBackground</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.SounDroid">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">?attr/statusBarBackground</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="shapeableImageViewStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="textViewStyle" parent="">
        <item name="fontFamily">@font/fira_sans_regular</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="popupMenuStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>